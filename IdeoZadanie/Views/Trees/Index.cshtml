    <li>
        @if (tree.Childrens.Count > 1)
        {
            <span class="caretList">@Html.DisplayFor(modelItem => tree.Name)</span>
            <ul class="nested">
                @foreach (var t in tree.Childrens.Where(tr => tr.Id != tree.Id))
                {
                    @DisplayList(t, shift + 1);
                }
            </ul>
        } else
        {
            @Html.DisplayFor(modelItem => tree.Name)
        }
    </li>
}

